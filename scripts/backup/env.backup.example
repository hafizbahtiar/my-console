# Appwrite Database Backup Configuration
# Copy this file to your project root as .env.local and fill in your values

# Required: Appwrite Configuration
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_APPWRITE_DATABASE_ID=console-db
APPWRITE_API_KEY=your_server_api_key_here

# Optional: Backup Configuration
BACKUP_DIR=./backup
TZ=UTC

# Retention Policy (days/weeks/months to keep)
BACKUP_RETENTION_DAILY=7
BACKUP_RETENTION_WEEKLY=4
BACKUP_RETENTION_MONTHLY=12

# Collection Filtering (leave empty for all collections)
# BACKUP_EXCLUDE_COLLECTIONS=temp_data,cache
# BACKUP_INCLUDE_COLLECTIONS=audit_logs,user_profiles

# Format Selection (set to 'false' to disable)
BACKUP_FORMAT_POSTGRESQL=true
BACKUP_FORMAT_MONGODB=true
BACKUP_FORMAT_EXCEL=true

# Cronjob Schedules (cron format)
BACKUP_CRON_DAILY=0 2 * * *        # Daily at 2:00 AM UTC
BACKUP_CRON_WEEKLY=0 3 * * 0       # Weekly (Sunday) at 3:00 AM UTC
BACKUP_CRON_MONTHLY=0 4 1 * *      # Monthly (1st) at 4:00 AM UTC

# Cronjob Control (set to 'false' to disable)
BACKUP_CRON_DAILY_ENABLED=true
BACKUP_CRON_WEEKLY_ENABLED=true
BACKUP_CRON_MONTHLY_ENABLED=true

# Notifications (for future implementation)
# BACKUP_NOTIFICATIONS_ENABLED=true
# BACKUP_NOTIFICATION_EMAIL=admin@example.com
# BACKUP_NOTIFICATION_WEBHOOK=https://hooks.example.com/backup

# Logging Configuration
BACKUP_LOG_LEVEL=info
BACKUP_LOG_FILE=./backup/logs/backup.log
BACKUP_LOG_MAX_SIZE=10m
BACKUP_LOG_MAX_FILES=5
